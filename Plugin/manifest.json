{
  "name": "红盒子 - 小红书采集插件",
  "version": "1.6.0",
  "manifest_version": 3,
  "description": "一键下载小红书笔记和YouTube视频，保存到知识库",
  "permissions": [
    "contextMenus",
    "downloads",
    "activeTab",
    "scripting",
    "storage"
  ],
  "author": "Jamba Hailar",
  "homepage_url": "https://github.com/Jamailar",
  "host_permissions": [
    "https://www.xiaohongshu.com/*",
    "https://sns-webpic-qc.xhscdn.com/*",
    "https://www.youtube.com/*",
    "https://i.ytimg.com/*",
    "https://github.com/*",
    "http://127.0.0.1:23456/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.xiaohongshu.com/discovery/item/*",
        "https://www.xiaohongshu.com/explore/*"
      ],
      "run_at": "document_idle",
      "js": [
        "libs/jszip.min.js",
        "content-script.js"
      ]
    },
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "run_at": "document_idle",
      "js": [
        "youtube-content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "下载小红书笔记",
    "default_icon": {
      "16": "icons/Box.png",
      "48": "icons/Box.png",
      "128": "icons/Box.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/Box.png",
    "32": "icons/Box.png",
    "48": "icons/Box.png",
    "64": "icons/Box.png",
    "128": "icons/Box.png",
    "256": "icons/Box.png"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "image-tool.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}